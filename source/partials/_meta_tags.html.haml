%meta{:charset => "utf-8", :content=>"text/html"}
/ Always force latest IE rendering engine or request Chrome Frame
%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
%meta(name="google" content="nositelinkssearchbox")


// personal info
%meta(name="description" content="Omar Jalalzada is a digital product designer that makes better sense of things. Making things more human and relatable by focusing on the end user.  This is his design portfolio and links to additional references.")
%meta(name="author" content="Omar Jalalzada")
%meta(name="copyright" content="Omar Jalalzada")


// Open graph properties
%meta(property="og:type" content="website")
%meta(property="og:title" content="Omar Jalalzada's Portfolio")
%meta(property="og:description" content="Omar Jalalzada's portfolio and links to additional references")
%meta(property="og:image" content="http://ooomar.co/assets/open_graph_thumb.jpeg")
%meta(property="og:image:type" content="image/jpeg")
%meta(property="og:image:width" content="1200")
%meta(property="og:image:height" content="630")


// Twitter card properties
%meta(name="twitter:card" content="summary_large_image")
%meta(name="twitter:site" content="@omar___oj")
%meta(name="twitter:creator" content="@omar___oj")
%meta(name="twitter:title" content="Omar Jalalzada's Portfolio")
%meta(name="twitter:description" content="Design portfolio of Omar Jalalzada and links to additional references")
%meta(name="twitter:image:src" content="http://ooomar.co/assets/open_graph_thumb.jpeg")


// Favicon
%link(rel="shortcut icon" href="favicon.ico")


// Mobile
%meta{content: "initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width", name: "viewport"}
